<% layout('layouts/boilerplate') %>


<div class="row">
    <h1 class="text-center">Edit Campground</h1>

    <div class="col-6 offset-3">
    
    <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
        <div class="mb-3">
            <label class = "form-label" for="title">Title</label>
            <input class= "form-control"type="text" id="title" name="title" value="<%= campground.title %>">
        </div>
        <div class="mb-3">
            <label class = "form-label" for="price">Price</label>
            <input class= "form-control" type="number" id="price" name="price" value="<%= campground.price %>">
        </div>
        <div class="mb-3">
            <label class = "form-label" for="description">Description</label> 
            <textarea class= "form-control" type="text" id="description" name="description" > <%= campground.description %></textarea>
        </div>
       <div class="mb-3">
             
        <label class = "form-label" for="location">Location</label>
        <input class= "form-control" type="text" id="location" name="location" value="<%= campground.location %>"> 
       </div>

       <div class="mb-3">
             
        <label class = "form-label" for="image">Image Url</label>
        <input class= "form-control" type="text" id="image" name="image" value="<%= campground.image %>"> 
       </div>


        <button class="btn btn-info mb-3"> Update Campground </button>
    </form>
    <a href="/campgrounds/<%= campground._id %>">Go Back</a>

    </div>
</div>