<% layout('layouts/boilerplate') %>
<body>
    <h1>All blogs</h1>
    <a href="/campgrounds/new">New Blog</a>
    
    <ul>
        <% for(let cmp of campgrounds) {%>

            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= cmp.images[0].url %>">
                    </div>

           
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"> <%= cmp.title %></h5>
                            <p class="card-text"><%= cmp.description %>
                            <small class="text-muted"><%= cmp.location %></small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= cmp._id %>"> View <%= cmp.title %></a>


                        </div>
                    </div>
            </div>
        </div>

            <% } %>
    </ul>
        
